<div class="flex justify-between items-center">
  <h1 class="font-bold">Taking Survey - <%=@survey.name%></h1>

  <% if can_administer? %>
    <%= link_to "Back to surveys", surveys_path %>
  <% end %>
</div>

<hr class="my-3"/>

<% if @survey.questions.count == 0 %>
  <div class="text-center">
    This Survey does not have any questions yet!
  </div>
<% else %>
  <%= render partial: 'form', locals: { submit_text: "Submit" } %>
<% end %>
